<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kueen.cellsystem.dao.OpinionMapper">

    <select id="getAll" resultType="com.kueen.cellsystem.entity.OpinionDetail">
        SELECT
            *
        FROM
            opinion
    </select>

    <update id="modify" parameterType="com.kueen.cellsystem.entity.OpinionDetail"> 
        UPDATE
            opinion
        SET
            content = #{content}
        WHERE
            id = #{id}
    </update>

    <insert id="add" parameterType="com.kueen.cellsystem.entity.OpinionDetail">
        INSERT INTO
            opinion (contnet)
        VALUES
            (#{contnet})
    </insert>

    <delete id="delete">
        DELETE FROM
            opinion
        WHERE
            id = #{id}
    </delete>

</mapper>